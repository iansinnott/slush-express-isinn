off-white = #fafafa

// }}} END Variables

// Mixins {{{
// - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - -

// Calculate a px amount as a percentage
// Note that the '' are necessary to cast as a percentage
pct(number)
  unit(number / content-width * 100, '%')

// Create a downwards triangle
triangle-down(color = red, w = 50px, h = 25px)
  position relative
  &:after
    content ''
    width 0
    height 0
    border-left (w/2) solid transparent
    border-right (w/2) solid transparent
    border-top h solid color
    {block}


// }}} END Mixins

// General {{{
// - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - -

*
  box-sizing border-box

body
  font-family body-font
  background #FEFEFE
  color black
  font-size 18px

img
  max-width 100%
  width auto

// }}} END General


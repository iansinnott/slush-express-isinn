global-reset()

// Variables {{{
// - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - -

content-width = 1100px
body-font = 'Helvetica Neue', Helvetica, Arial, sans-serif
black = #464848
blue = #4576AF
yellow = #FBF6AE
gray = #8A8A8A
gray-bd = #949599
gray-txt = #9B9B9B
maroon = #C15467
